	<thread><tr><th>bldgname</th><th>room</th><th>maxcap</th></tr></thread>
	<tbody id="myTable">
		<c:forEach var="l" items="${list}">
		    <tr>	
		    	<td>${l.bldgname}</td>
		        <td>${l.room}</td>
		        <td>${l.maxcap}</td>      
		    </tr>
		</c:forEach>
	</tbody>
	</table>
